{
  "name": "@muvinin/monorepo",
  "version": "1.0.0",
  "description": "The muvin.in monorepo",
  "main": "./",
  "engines": {
    "node": ">=10.*"
  },
  "scripts": {
    "build": "lerna run build",
    "monorepo-build": "./scripts/monorepo-build.sh",
    "bootstrap": "lerna bootstrap --no-ci --ignore-scripts",
    "clean": "lerna clean --yes",
    "start": "./.scripts/start.sh",
    "pretest": "npm run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lintcss": "lerna run lintcss",
    "lint:lerna": "eslint **/*.js",
    "version:install": "npm install --production",
    "version:master": "npm run version:install && lerna version --conventional-commits --changelog-preset @muvinin/monorepo --no-push --yes",
    "version:pr": "npm run version:install && lerna version --conventional-commits --changelog-preset @muvinin/monorepo --no-git-tag-version --no-push --yes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muvinin/monorepo.git"
  },
  "keywords": [],
  "author": "muvin.in",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muvinin/monorepo/issues"
  },
  "homepage": "https://www.muvin.in",
  "dependencies": {
    "@babel/helpers": "7.1.0",
    "@commitlint/config-conventional": "7.0.1",
    "@commitlint/format": "7.0.0",
    "@commitlint/lint": "7.0.0",
    "@commitlint/load": "7.0.0",
    "@commitlint/parse": "7.0.0",
    "@commitlint/read": "7.0.0",
    "chalk": "2.4.1",
    "inquirer": "6.0.0",
    "lerna": "^3.4.1"
  },
  "devDependencies": {
    "concurrently": "3.6.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0",
    "husky": "1.1.2",
    "package-change-checker": "1.1.0"
  }
}
